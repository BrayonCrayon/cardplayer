@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="flex flex-wrap justify-center self-center w-5/6 lg:2/3 xl:w-1/4 bg-white shadow-lg rounded">
    <div class="w-full text-4xl font-semibold text-black text-center md:text-6xl">@ViewData["Title"]</div>
    <div class="w-full flex flex-wrap justify-center">
        <section class="w-3/4">
            <form id="account" method="post" class="flex flex-wrap justify-center">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group w-full">
                    <label asp-for="Input.UserName"></label>
                    <input asp-for="Input.UserName" class="form-control" />
                    <span asp-validation-for="Input.UserName" class="text-danger"></span>
                </div>
                <div class="form-group w-full">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group w-full">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div class="form-group w-full">
                    <button type="submit" class="primary">Log in</button>
                </div>
                <div class="form-group w-full flex flex-col md:w-3/4">
                    <a id="forgot-password" class="my-2 py-1 border-2 border-purple-500 no-underline text-center text-black  font-semibold rounded hover:bg-gray-200" asp-page="./ForgotPassword">Forgot your password?</a>
                    <a asp-page="./Register" class="my-2 py-1 border-2 border-purple-500 no-underline text-center text-black  font-semibold rounded hover:bg-gray-200" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                    <a id="resend-confirmation" class="my-2 py-1 border-2 border-purple-500 no-underline text-center text-black  font-semibold rounded hover:bg-gray-200 " asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
